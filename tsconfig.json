{
  "compilerOptions": {
    "lib": ["es2019"],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",

    /* Rules */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "downlevelIteration": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
